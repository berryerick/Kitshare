<%= render "/header" %>

<div class="main_content">
  <form class="kit" action="/sessions" method="post">
    <div class="kit_header"></div>
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">

    <div class="field">
      <label for="user[email]">Email:</label>
      <input class="form_input" type="text" name="user[email]" >
    </div>

    <div class="field">
      <label for="user[password]">Password:</label>
      <input class="form_input" type="password" name="user[password]" >
    </div>

    <div class="field">
      <button type="submit" class="submit_btn">Login</button>
    </div>
    <% if flash[:login_errors] %>
    <div class="errors">
          <p class="red"><%=flash[:login_errors]%></p>
    </div>
    <%end%>

  </form>
</div>
